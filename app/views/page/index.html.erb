<script type="text/javascript">
  $(document).ready(function() {
    $(".homepage-news-date").timeago();
  });
</script>

<h1>Community News Feed <a href="http://pipes.yahoo.com/pipes/pipe.run?_id=DkJE9pns3RGlyDwlBR50VA&_render=rss" title="Subscribe to the Adhearsion Community News Feed" rel="alternate" type="application/rss+xml"><img src="http://www.feedburner.com/fb/images/pub/feed-icon16x16.png" alt="Subscribe to this blog" style="border:0"/></a></h1>

<div id="homepage-news">
  <% @blog_posts.each do |post| %>
    <div class="blog-post">
      <p>
        <a href="<%= post[:url] %>">
          <span class="title"><%= h post[:title] %></span><br/>
          <span class="homepage-news-date"><%= post[:date].strftime('%Y-%m-%d %H:%M:%S') %></span>
        </a>
      </p>
    </div>
  <% end %>
</div>
